<div id="calc-game">
  <div class="row">
    <div id="title">Calculator</div>
  </div>

  <div class="row">
    <div id ="total">0</div>
  </div>

  <div class="row">
    <%(1..9).each do |number|%>
      <div class ="box col-md-3" onclick="add(<%= number %>)">
      <%= number %>
      </div>
    <%end%>        
  </div>

  <div class="row">
    <div id ="random" class="large-button" onclick="addRandomInt()">Random(1-9)</div>
  </div>

  <div class="row">
    <div id ="clear" class="large-button" onclick="clearCalc()">Clear</div>
  </div>
</div>

